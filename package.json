{
  "name": "leverx-vanillajs-template",
  "description": "Template for frontend vanilla JS homeworks",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "lint-fix": "npm run lint -- --fix",
    "start": "live-server --open=\"./src/index.html\""
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.1",
    "live-server": "^1.2.1",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
